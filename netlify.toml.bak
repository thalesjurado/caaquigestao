[build]
  command = "npm run build"
  publish = ".next"

[[plugins]]
  package = "@netlify/plugin-nextjs"

[build.environment]
  NODE_VERSION = "18"
  NPM_VERSION = "9"

# Headers to avoid stale HTML but allow long-term caching of static chunks
[[headers]]
  for = "/_next/static/*"
  [headers.values]
    Cache-Control = "public, max-age=31536000, immutable"

[[headers]]
  for = "/*"
  [headers.values]
    # Ensure HTML is not cached aggressively, so newest pages reference newest chunks
    Cache-Control = "public, max-age=0, must-revalidate"
